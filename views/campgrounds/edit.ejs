<% layout('layouts/boilerplate') %>


        <div class="row">
            <h1 class="text-center">Edit Campground</h1>
            <div class="col-6 offset-3">
                <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
                    <div class="mb-3">
                        <label class="form-label"for="title">Enter title</label>
                        <input class="form-control" type="text" id="title" name="title" placeholder="title" value="<%= camp.title %> " required> 
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label"for="location">Enter location</label>
                        <input class="form-control" type="text" id="location" name="location" placeholder="location" value="<%= camp.location %> " required>    
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                   
                    <div class="mb-3">
                        <label class="form-label"for="price">Enter Price</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="price-label">Rs.</span>
                            <input type="text" class="form-control" placeholder="Price" name="price" aria-label="Price" aria-describedby="price-label" value="<%= camp.price %> " required>
                            <div class="valid-feedback">
                                Looks good!
                              </div>  
                        </div>
                      </div>
                      <div class="mb-3">
                        <label class="form-label"for="description">Enter description</label>
                        <textarea class="form-control" placeholder="Leave a description here" id="description" name="description" required><%= camp.description %> </textarea>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-file custom-file">
                            <input type="file" class="form-file-input" id="image" name="image" multiple>
                            <label class="form-file-label" for="image">
                                <span class="form-file-text custom-file-label">Choose image(s)...</span>
                                <span class="form-file-button">Browse</span>
                            </label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <% camp.images.forEach((img,i) => { %>
                         <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                         <div class="form-check-inline">
                             <input type="checkbox" id="image-<%= i %> " name="deleteImages[]" value="<%=img.filename%>">
                         </div>
                         <label for="image-<%= i %> ">Delete</label>
                        <% }) %>

                    </div>
                    <button class="btn btn-success">Update Campground</button>  <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>" role="button">Back</a>
                </form>
               
                
            </div>
        </div>